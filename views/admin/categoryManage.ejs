  <script>

const form = document.getElementById("addCategory");
const newcategory = document.getElementById("typeEmailX-2 newCategory");
const errorElement = document.querySelector('.error')

form.addEventListener('submit',(e)=>{

  let message = []

  if(newcategory.value.trim().length===0){
    message.push('Please fill submited area')
  }
  
  if (message.length > 0) {
     e.preventDefault();
     errorElement.innerText = message.join(', ');
  }
})

const form2 = document.getElementById("updateCategory");
const category = document.getElementById('category')
const editcategory = document.getElementById("typeEmailX-2 editedcategory");

form2.addEventListener('submit',(e)=>{

  let message = []

  if(category.value == 'Select Category'){
    message.push('Please select category')
  }else if(editcategory.value.trim().length === 0){
    message.push('Please fill submited area')
  }
  
  if (message.length > 0) {
     e.preventDefault();
     errorElement.innerText = message.join(', ');
  }
})


const form3 = document.getElementById("deleteCategory");
const delcategory = document.getElementById("delcategory")
form3.addEventListener('submit',(e)=>{

  let message = []

  if(delcategory.value == 'Select Category'){
    message.push('Please select category')
  }
  
  if (message.length > 0) {
     e.preventDefault();
     errorElement.innerText = message.join(', ');
  }
})
</script>


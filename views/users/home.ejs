    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-4 col-md-4">
                    <div class="section-title">
                        <h4>New Products</h4>
                    </div>
                </div>
            </div>
            <div class="row property__gallery">
                <% if(product.length>0){
                    for(let i=0;i< product.length; i++){ %>
                        <div class="col-lg-3 col-md-4 col-sm-12 col-12 mix">
                            <div class="product__item ">
                                <div class="product__item__pic set-bg d-flex justify-content-center">
                                    <a href="/singleProduct?id=<%=product[i]._id%>"><img
                                            src="/proImage/<%=product[i].image[0]%>" alt=""></a>
                                            <%if(product[i].stocks<=0){%>
                                                <div class="label stockout">out of stock</div>
                                            <%}else{%>
                                                <div class="label new">Fresh Arrivals</div>
                                                <%}%>
                                            
                                    <ul class="product__hover">
                                        <li><a href="/proImage/<%=product[i].image[0]%>" class="image-popup"><span
                                                    class="arrow_expand"></span></a></li>
                                        <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                        <li><a href="/addToCart?id=<%=product[i]._id%>"><span class="icon_bag_alt"></span></a></li>
                                       
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h5><a href="/singleProduct?id=<%=product[i]._id%>"><%-product[i].title%></a></h5>
                                    <div class="product__price">â‚¹ <%-product[i].price%></div>
                                </div>
                            </div>
                        </div>
                        <% } } %>
            </div>
        </div>
    </section>




